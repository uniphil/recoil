{
  "name": "xxs",
  "version": "0.0.1",
  "description": "sort of like react or elm but worse and extra-extra-small",
  "main": "xxs.universal.js",
  "directories": {
    "example": "examples"
  },
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "presets": [
            "es2015"
          ]
        }
      ]
    ]
  },
  "dependencies": {},
  "devDependencies": {
    "babel-plugin-transform-node-env-inline": "^6.1.18",
    "babelify": "^7.2.0",
    "browserify": "^12.0.1",
    "uglifyjs": "^2.4.10"
  },
  "scripts": {
    "build:universal": "browserify xxs.js -U > xxs.universal.js",
    "build:tiny": "cat xxs.js | babel --presets es2015 --plugins transform-node-env-inline | uglifyjs -c -m > xxs.tiny.js",
    "build": "npm run build:universal && npm run build:tiny",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/uniphil/xxs.git"
  },
  "keywords": [
    "tiny",
    "framework",
    "react",
    "elm",
    "prototype"
  ],
  "author": "uniphil",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/uniphil/xxs/issues"
  },
  "homepage": "https://github.com/uniphil/xxs#readme"
}
